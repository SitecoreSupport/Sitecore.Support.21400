<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:set="http://www.sitecore.net/xmlconfig/set/">
  <sitecore>
    <events>
      <event name="user:updated">
        <handler type="Sitecore.Commerce.Connect.CommerceServer.Profiles.Events.CommerceUserEventHandler, Sitecore.Commerce.Connect.CommerceServer" method="OnUserUpdated">
          <patch:attribute name="type" value="Sitecore.Support.Commerce.Connect.CommerceServer.Profiles.Events.CommerceUserEventHandler, Sitecore.Support.21400" />
        </handler>
      </event>
    </events>
    <settings>
      <setting name="CommerceDomains" value="CommerceCustomers"/>
    </settings>
  </sitecore>
</configuration>